  <script>
    // Year
    document.getElementById('yr').textContent = new Date().getFullYear();

    // Sprinkle subtle dots like the design
    const dots = document.getElementById('dots');
    const clusters = [[120,40],[340,28],[520,70],[900,105],[1100,70],[1300,120],[780,260],[1240,300]];
    clusters.forEach(([x,y])=>{
      for(let i=0;i<6;i++){
        const s = 1 + Math.random()*2;
        const d = document.createElement('span');
        d.style.left = (x + (Math.random()-0.5)*40) + 'px';
        d.style.top  = (y + (Math.random()-0.5)*40) + 'px';
        d.style.width = s+'px'; d.style.height = s+'px';
        d.className = 'absolute rounded-sm bg-white/50 opacity-50';
        dots.appendChild(d);
      }
    });
  </script>
